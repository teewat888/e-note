<h5>Tags management</h5>
<div class="table-responsive user-admin-box">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tag</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
        <% @tags.each do |tag| %>
            <tr>
                <td><%= tag.name %></td>
                <td><%= link_to "Edit", edit_admin_tag_path(tag) %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
<%= form_with url: new_admin_tag_path, method: :get do |f| %>
    <%= f.submit "New tag", class: "btn btn-outline-dark btn-sm" %>
<% end %>